<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Dashboard Kanban View -->
        <record id="view_dashboard_kanban" model="ir.ui.view">
            <field name="name">dashboard.kanban</field>
            <field name="model">workshop_bjm.dashboard</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard o_emphasize_colors o_stock_kanban">
                    <templates>
                        <t t-name="dashboard_kanban_box">
                            <div class="o_kanban_card">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <span>Faktur Bulan ini: <field name="invoice_month_count"/></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary">
                                        <button class="btn btn-primary" name="action_open_invoices">
                                            Open Invoices
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action for Dashboard Kanban View -->
        <record id="action_data_dashboard_kanban" model="ir.actions.act_window">
            <field name="name">Dashboard Kanban</field>
            <field name="res_model">workshop_bjm.dashboard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">kanban,form</field>
        </record>

        <!-- Menu Item for Dashboard Kanban -->
        <menuitem id="menu_data_dashboard_kanban" name="Dashboard Kanban" parent="menu_workshop_bjm_root" action="action_data_dashboard_kanban"/>
    </data>
</odoo>
