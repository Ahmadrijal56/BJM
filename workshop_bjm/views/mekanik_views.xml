<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_mekanik_form" model="ir.ui.view">
        <field name="name">mekanik.form</field>
        <field name="model">workshop_bjm.mekanik</field>
        <field name="arch" type="xml">
            <form string="Mekanik">
                <sheet>
                    <div class="oe_title">
                        <h1 style="text-align: left;">Data Mekanik Bintang Jaya Motor</h1>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="alamat"/>
                        <field name="no_telepon"/>
                        <field name="email"/>
                        <field name="pengalaman"/>
                    </group>
                    <group>
                        <field name="catatan"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_mekanik_tree" model="ir.ui.view">
        <field name="name">mekanik.tree</field>
        <field name="model">workshop_bjm.mekanik</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="alamat"/>
                <field name="no_telepon"/>
                <field name="email"/>
                <field name="pengalaman"/>
                <field name="catatan"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_mekanik_search" model="ir.ui.view">
        <field name="name">mekanik.search</field>
        <field name="model">workshop_bjm.mekanik</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Nama"/>
                <field name="alamat" string="Alamat"/>
                <field name="no_telepon" string="Nomor Telepon"/>
                <field name="email" string="Email"/>
                <field name="pengalaman" string="Pengalaman"/>
                <field name="catatan" string="Catatan"/>
                
                <!-- Filter Group By -->
                <filter string="Group By" name="group_by">
                    <filter name="name" string="Nama" context="{'group_by': 'name'}"/>
                    <filter name="alamat" string="Alamat" context="{'group_by': 'alamat'}"/>
                    <filter name="no_telepon" string="Nomor Telepon" context="{'group_by': 'no_telepon'}"/>
                    <filter name="email" string="Email" context="{'group_by': 'email'}"/>
                    <filter name="pengalaman" string="Pengalaman" context="{'group_by': 'pengalaman'}"/>
                </filter>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mekanik" model="ir.actions.act_window">
        <field name="name">Data Mekanik</field>
        <field name="res_model">workshop_bjm.mekanik</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_mekanik_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tambah dan kelola data mekanik.
            </p>
        </field>
    </record>

    <!-- Menuitem -->
    <menuitem id="menu_workshop_bjm_root" name="Workshop BJM"/>
    <menuitem id="menu_data_master" name="Master Data" parent="menu_workshop_bjm_root"/>
    <menuitem id="menu_mekanik" name="Data Mekanik" parent="menu_data_master" action="action_mekanik"/>
</odoo>
