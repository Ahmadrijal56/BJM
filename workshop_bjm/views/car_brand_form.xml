<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_car_brand_form" model="ir.ui.view">
        <field name="name">car.brand.form</field>
        <field name="model">workshop_bjm.car_brand</field>
        <field name="arch" type="xml">
            <form string="Car Brand">
                <sheet>
                    <div class="oe_title">
                        <h1 style="text-align: left;">Car Brand Details</h1>
                        <field name="name"/>
                    </div>
                    <group>
                        <field name="type_ids" widget="one2many_list">
                            <tree editable="bottom">
                                <field name="name"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
