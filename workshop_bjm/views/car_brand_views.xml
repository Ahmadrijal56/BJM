<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Car Brand Form View -->
    <record id="view_car_brand_form" model="ir.ui.view">
        <field name="name">car.brand.form</field>
        <field name="model">workshop_bjm.car_brand</field>
        <field name="arch" type="xml">
            <form string="Car Brand">
                <sheet>
                    <div class="oe_title">
                        <h1 style="text-align: left;">Merek Mobil</h1>
                        <field name="name"/>
                    </div>
                    <notebook>
                        <page string="Type Mobil" name="car_types">
                            <field name="type_ids" widget="one2many_list">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Car Brand Tree View -->
    <record id="view_car_brand_tree" model="ir.ui.view">
        <field name="name">car.brand.tree</field>
        <field name="model">workshop_bjm.car_brand</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type_ids" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Car Brand Search View -->
    <record id="view_car_brand_search" model="ir.ui.view">
        <field name="name">car.brand.search</field>
        <field name="model">workshop_bjm.car_brand</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Brand Name"/>
                
                <!-- Filter Group By -->
                <filter string="Group By" name="group_by">
                    <filter name="name" string="Brand Name" context="{'group_by': 'name'}"/>
                </filter>
            </search>
        </field>
    </record>

    <!-- Car Brand Action -->
    <record id="action_car_brand" model="ir.actions.act_window">
        <field name="name">Merek Mobil</field>
        <field name="res_model">workshop_bjm.car_brand</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_car_brand_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage car brands and their types.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_workshop_bjm_root" name="Workshop BJM"/>
    <menuitem id="menu_data_master" name="Master Data" parent="menu_workshop_bjm_root"/>
    <menuitem id="menu_merek_mobil" name="Data Merek Mobil" parent="menu_data_master" action="action_car_brand"/>
</odoo>
